{
  "name": "siteboss-client",
  "version": "1.0.0",
  "description": "Frontend for SiteBoss - SaaS for construction teams",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "analyze": "npm run build && npx vite-bundle-analyzer dist/stats.html",
    "analyze:dev": "cross-env ANALYZE=true npm run build",
    "analyze:windows": "powershell -ExecutionPolicy Bypass -File scripts/analyze-windows.ps1",
    "bundle:size": "node scripts/bundle-size-check.js",
    "bundle:report": "npm run analyze && npm run bundle:size",
    "i18n:scan": "i18next-scanner --config i18next-scanner.config.js",
    "i18n:validate": "node scripts/validate-translations.cjs",
    "i18n:sync": "node scripts/sync-translations.cjs",
    "i18n:quality": "node scripts/translation-quality-check.cjs",
    "i18n:monitor": "node scripts/translation-monitor.cjs",
    "i18n:stats": "node scripts/validate-translations.cjs --stats",
    "images:optimize": "node scripts/optimize-images.js",
    "images:convert": "node scripts/convert-to-webp.js",
    "images:resize": "node scripts/resize-images.js",
    "images:compress": "node scripts/compress-images.js",
    "pwa:check": "npm run build && lighthouse http://localhost:4173 --chrome-flags=\"--headless\" --only-categories=pwa --output=html --output-path=./pwa-report.html",
    "pwa:analyze": "npm run build && npm run preview & sleep 3 && lighthouse http://localhost:4173 --chrome-flags=\"--headless\" --only-categories=pwa --output=json --output-path=./pwa-score.json",
    "clear-cache": "node scripts/clear-cache.js",
    "dev:clean": "npm run clear-cache && npm run dev"
  },
  "dependencies": {
    "@headlessui/react": "^2.2.0",
    "@heroicons/react": "^2.2.0",
    "@sentry/react": "^9.32.0",
    "@sentry/vite-plugin": "^3.5.0",
    "@types/leaflet": "^1.9.18",
    "axios": "^1.7.9",
    "chart.js": "^4.5.0",
    "clsx": "^2.1.1",
    "date-fns": "^2.30.0",
    "dompurify": "^3.2.6",
    "framer-motion": "^12.23.3",
    "fuse.js": "^7.1.0",
    "i18next": "^24.2.3",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "i18next-icu": "^2.0.3",
    "leaflet": "^1.9.4",
    "marked": "^14.1.4",
    "numeral": "^2.0.6",
    "react": "^18.3.1",
    "react-beautiful-dnd": "^13.1.1",
    "react-chartjs-2": "^5.3.0",
    "react-country-flag": "^3.1.0",
    "react-dom": "^18.3.1",
    "react-grid-layout": "^1.5.1",
    "react-hot-toast": "^2.5.2",
    "react-i18next": "^15.5.3",
    "react-intl": "^6.4.4",
    "react-leaflet": "^4.2.1",
    "react-router-dom": "^7.1.1",
    "socket.io-client": "^4.8.1",
    "tailwind-merge": "^3.3.1",
    "vite-plugin-image-presets": "^0.3.4"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/react": "^18.3.17",
    "@types/react-dom": "^18.3.5",
    "@vitejs/plugin-react": "^4.3.4",
    "@vueuse/core": "^13.4.0",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.0.0",
    "eslint-plugin-react-refresh": "^0.4.16",
    "globals": "^15.14.0",
    "i18next-scanner": "^4.4.0",
    "imagemin": "^9.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-svgo": "^11.0.1",
    "imagemin-webp": "^8.0.0",
    "postcss": "^8.5.3",
    "rollup-plugin-visualizer": "^6.0.3",
    "sharp": "^0.34.2",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.6.2",
    "vite": "^6.0.5",
    "vite-bundle-analyzer": "^0.23.0",
    "vite-plugin-pwa": "^1.0.0",
    "workbox-window": "^7.3.0"
  }
}
